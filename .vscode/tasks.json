                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}//client"
            },            
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "Ë†$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling...",
                    "endsPattern": " Compiled successfully.*"
                }
            }
        },
        {
            "label": "Server Build",
            "type": "chrome",
}
     
        {
            "label": "Build",
            "dependsOn": [
                "Client Build",
                // "Server Build"
            ]
        }
    ]
}
